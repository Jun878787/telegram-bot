    def add_transaction(self, amount, type_):
        """æ·»åŠ äº¤æ˜“è¨˜éŒ„"""
        transaction = {
            'time': datetime.now().strftime('%H:%M'),
            'amount': amount if type_ == 'deposit' else -abs(amount)
